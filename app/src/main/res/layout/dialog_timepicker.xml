<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:eld="http://schemas.android.com/apk/res-auto"
    style="@style/dialog_common_container"
    android:orientation="vertical"
    android:paddingTop="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/bg_dialog_time_picker_title">

        <com.unitedbustech.eld.view.FontButton
            android:id="@+id/cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="@color/transparent"
            android:gravity="center"
            android:text="@string/cancel"
            android:textAllCaps="false"
            android:textColor="#666666"
            android:textSize="16sp"
            eld:fontType="medium" />

        <com.unitedbustech.eld.view.FontButton
            android:id="@+id/done_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/transparent"
            android:gravity="center"
            android:text="@string/done"
            android:textAllCaps="false"
            android:textColor="#007AFF"
            android:textSize="16sp"
            eld:fontType="medium" />

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <com.unitedbustech.eld.view.UINumberPicker
                android:id="@+id/hour_picker"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <View
                android:layout_width="45dp"
                android:layout_height="match_parent" />

            <com.unitedbustech.eld.view.UINumberPicker
                android:id="@+id/minute_picker"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <View
                android:layout_width="45dp"
                android:layout_height="match_parent" />

            <com.unitedbustech.eld.view.UINumberPicker
                android:id="@+id/period_picker"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

        </LinearLayout>

    </FrameLayout>

</LinearLayout>