<resources>

    <style name="AppTheme" parent="BaseTheme"></style>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="launcherActivityTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/launcher_background</item>
        <item name="colorPrimary">@color/launcher_background</item>
        <item name="colorPrimaryDark">@color/launcher_background</item>
        <item name="colorAccent">@color/launcher_background</item>
    </style>

    <style name="tab_menu_text">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textSize">10sp</item>
        <item name="android:lineSpacingMultiplier">1</item>
    </style>

    <style name="top_tab_menu_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingMultiplier">1</item>
    </style>

    <style name="tab_menu_hint">
        <item name="android:layout_width">8dp</item>
        <item name="android:layout_height">8dp</item>
        <item name="android:background">@drawable/tab_menu_hint</item>
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:textSize">5sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="main_tab_menu_hint">
        <item name="android:layout_width">5dp</item>
        <item name="android:layout_height">5dp</item>
        <item name="android:background">@drawable/tab_menu_hint</item>
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="dialog_common_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_dialog_common</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:paddingTop">30dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="break_dialog_common_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_dialog_common</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:padding">20dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="dialog_common_btn" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:layout_height">50dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="dialog_common_positive_btn" parent="dialog_common_btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/btn_dialog_common_positive</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="dialog_horizontal_negative_btn" parent="dialog_common_btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/btn_dialog_common_left</item>
        <item name="android:textColor">@color/theme</item>
    </style>

    <style name="dialog_horizontal_neutral_btn" parent="dialog_common_btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/btn_dialog_common_right</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="dialog_vertical_negative_btn" parent="dialog_common_btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/btn_dialog_common_left</item>
        <item name="android:textColor">@color/theme</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <style name="dialog_vertical_neutral_btn" parent="dialog_common_btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/btn_dialog_common_right</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="dialog_prompt_container">
        <item name="android:layout_width">@dimen/dialog_prompt_w</item>
        <item name="android:layout_height">@dimen/dialog_prompt_h</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/bg_dialog_success</item>
    </style>

    <style name="dialog_vehicle_positive_btn" parent="dialog_common_positive_btn">
        <item name="android:background">@drawable/btn_dialog_common_left</item>
        <item name="android:textColor">@color/theme</item>
    </style>

    <style name="dialog_loading_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_dialog_loading</item>
    </style>

    <style name="login_input">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center|left</item>
        <item name="android:textSize">@dimen/login_input_font</item>
        <item name="android:textColor">@color/login_input_font</item>
        <item name="android:textColorHint">@color/login_input_font_hint</item>
        <item name="android:paddingLeft">@dimen/login_input_pd</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="carrier_input" parent="login_input">
        <item name="android:inputType">text</item>
        <item name="android:hint">@string/login_carrier_hint</item>
    </style>

    <style name="driver_input" parent="login_input">
        <item name="android:inputType">text</item>
        <item name="android:hint">@string/login_driver</item>
    </style>

    <style name="password_input" parent="login_input">
        <item name="android:inputType">textPassword</item>
        <item name="android:hint">@string/login_password</item>
    </style>

    <style name="font_btn" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">@dimen/font_input_w</item>
        <item name="android:layout_height">@dimen/font_input_h</item>
        <item name="android:background">@drawable/btn_font</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/login_btn_font</item>
    </style>

    <style name="login_btn" parent="font_btn">
        <item name="android:text">@string/login_btn</item>
        <item name="android:layout_marginTop">@dimen/login_btn_mgt</item>
    </style>

    <style name="login_input_container">
        <item name="android:layout_width">@dimen/font_input_w</item>
        <item name="android:layout_height">@dimen/font_input_h</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="login_icon_btn">
        <item name="android:layout_width">@dimen/login_icon_w</item>
        <item name="android:layout_height">@dimen/login_icon_h</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="login_clear_icon_btn" parent="login_icon_btn">
        <item name="android:layout_margin">@dimen/login_icon_mg</item>
        <item name="android:src">@drawable/ic_input_clear</item>
    </style>

    <style name="login_state_icon_btn" parent="login_icon_btn">
        <item name="android:layout_marginRight">@dimen/login_icon_mg</item>
    </style>

    <style name="welcome_confirm_btn" parent="font_btn">
        <item name="android:text">@string/welcome_confirm_btn</item>
        <item name="android:layout_marginTop">@dimen/welcome_btn_mgt</item>
    </style>

    <style name="welcome_reject_btn" parent="font_btn">
        <item name="android:text">@string/welcome_reject_btn</item>
        <item name="android:textColor">@color/theme</item>
        <item name="android:background">@drawable/btn_font_grey</item>
        <item name="android:layout_marginTop">@dimen/welcome_btn_mgt</item>
    </style>

    <style name="prepare_text_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:paddingRight">25dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:layout_marginTop">45dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:background">@drawable/bg_prepare_text</item>
        <item name="android:lineSpacingExtra">3dp</item>
        <item name="android:textColor">#2a7fda</item>
        <item name="android:textSize">12sp</item>
        <item name="android:text">@string/prepare_text</item>
        <item name="android:scrollbars">none</item>
        <item name="android:overScrollMode">never</item>
    </style>

    <style name="prepare_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lineSpacingExtra">3dp</item>
        <item name="android:textColor">#2a7fda</item>
        <item name="android:textSize">12sp</item>
        <item name="android:text">@string/prepare_text</item>
    </style>

    <style name="prepare_try" parent="font_btn">
        <item name="android:text">@string/prepare_try_btn</item>
    </style>

    <style name="ifta_update_input_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#6591C1</item>
    </style>

    <style name="ifta_update_input">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">19dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#080E15</item>
        <item name="android:textColorHighlight">#cccccc</item>
        <item name="android:background">@null</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="ifta_update_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#E8E8E9</item>
    </style>

</resources>
