<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:eld="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/tab_menu_bg"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.unitedbustech.calculator.view.TabMenuItem
            android:id="@+id/tab_review"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            eld:itemIcon="@drawable/tab_menu_review"
            eld:itemText="@string/tab_menu_dot_item_review"
            eld:itemTextColors="@drawable/tab_menu_text" />

        <com.unitedbustech.calculator.view.TabMenuItem
            android:id="@+id/tab_send"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            eld:itemIcon="@drawable/tab_menu_email"
            eld:itemText="@string/tab_menu_dot_item_send"
            eld:itemTextColors="@drawable/tab_menu_text" />

    </LinearLayout>

</LinearLayout>